---
interface Props {
  title: string;
  description: string;
  tech: string[];
  github?: string;
  liveUrl?: string;
  slug: string;
}

const { title, description, tech, github, liveUrl, slug } = Astro.props;
---

<div style="border:1px solid var(--border); border-radius:10px; background:var(--bg-subtle);" class="flex flex-col h-full transition-all hover:border-[var(--accent)]">
  <div style="padding:1.25rem 1.5rem;" class="flex flex-col flex-1">
    <h3 style="color:var(--fg); font-size:1.05rem; font-weight:600; margin:0 0 0.5rem;">
      <a href={`/projects/${slug}`} style="color:inherit; text-decoration:none;" class="hover:text-[var(--accent)] transition-colors">
        {title}
      </a>
    </h3>
    <p style="color:var(--fg-muted); font-size:0.9rem; margin:0 0 1rem; flex:1;" class="line-clamp-3">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 mb-4">
      {tech.map(t => <span class="tag">{t}</span>)}
    </div>
    <div class="flex gap-3 flex-wrap">
      <a href={`/projects/${slug}`}
         style="font-size:0.82rem; color:var(--fg); border:1px solid var(--border); border-radius:6px; padding:0.3rem 0.75rem;"
         class="hover:border-[var(--accent)] transition-colors">
        View details →
      </a>
      {github && (
        <a href={github} target="_blank" rel="noopener noreferrer"
           style="font-size:0.82rem; color:var(--fg-muted); border:1px solid var(--border); border-radius:6px; padding:0.3rem 0.75rem;"
           class="hover:border-[var(--accent)] transition-colors">
          GitHub →
        </a>
      )}
      {liveUrl && (
        <a href={liveUrl} target="_blank" rel="noopener noreferrer"
           style="font-size:0.82rem; color:var(--accent); border:1px solid var(--accent); border-radius:6px; padding:0.3rem 0.75rem;"
           class="hover:opacity-75 transition-opacity">
          Live →
        </a>
      )}
    </div>
  </div>
</div>
