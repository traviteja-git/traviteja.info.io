---
interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags = [] } = Astro.props;
const formatted = new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
---

<a href={`/blog/${slug}`} class="block group" style="text-decoration:none;">
  <article style="border:1px solid var(--border); border-radius:10px; padding:1.25rem 1.5rem; background:var(--bg-subtle);" class="transition-all group-hover:border-[var(--accent)]">
    <div class="flex items-start justify-between gap-4">
      <h2 style="color:var(--fg); font-size:1.05rem; font-weight:600; line-height:1.4;" class="group-hover:text-[var(--accent)] transition-colors m-0">
        {title}
      </h2>
      <time style="color:var(--fg-muted); font-size:0.8rem; white-space:nowrap; margin-top:0.15rem;" datetime={date}>
        {formatted}
      </time>
    </div>
    <p style="color:var(--fg-muted); font-size:0.9rem; margin:0.5rem 0 0.75rem;" class="line-clamp-2">
      {description}
    </p>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => <span class="tag">{tag}</span>)}
      </div>
    )}
  </article>
</a>
