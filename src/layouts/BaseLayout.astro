---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  /** Absolute URL for og:image / twitter:image */
  image?: string;
  /** 'website' (default) or 'article' */
  type?: string;
  /** ISO 8601 date string for article:published_time */
  publishedDate?: string;
}

const {
  title,
  description = 'Personal website of Raviteja Tholupunoori â€” Data Engineer and Cloud Architect with 9+ years building scalable data pipelines on GCP, AWS, and Azure.',
  image,
  type = 'website',
  publishedDate,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const personLD = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Raviteja Tholupunoori',
  url: 'https://traviteja.com',
  jobTitle: 'Data Engineer & Cloud Architect',
  sameAs: [
    'https://linkedin.com/in/raviteja0096',
    'https://github.com/traviteja-git',
  ],
});

const articleLD = type === 'article' ? JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'TechArticle',
  headline: title,
  description,
  ...(image ? { image } : {}),
  author: {
    '@type': 'Person',
    name: 'Raviteja Tholupunoori',
    url: 'https://traviteja.com',
  },
  publisher: {
    '@type': 'Person',
    name: 'Raviteja Tholupunoori',
    url: 'https://traviteja.com',
  },
  ...(publishedDate ? { datePublished: publishedDate } : {}),
  url: canonicalURL.toString(),
}) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Raviteja Tholupunoori" />

    <!-- Open Graph -->
    <meta property="og:site_name"   content="Raviteja Tholupunoori" />
    <meta property="og:type"        content={type} />
    <meta property="og:title"       content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url"         content={canonicalURL} />
    {image && <meta property="og:image" content={image} />}
    {type === 'article' && publishedDate && (
      <meta property="article:published_time" content={publishedDate} />
    )}
    {type === 'article' && (
      <meta property="article:author" content="Raviteja Tholupunoori" />
    )}

    <!-- Twitter / X Card -->
    <meta name="twitter:card"        content={image ? 'summary_large_image' : 'summary'} />
    <meta name="twitter:title"       content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}

    <!-- JSON-LD: Person (all pages) -->
    <script type="application/ld+json" set:html={personLD} />
    <!-- JSON-LD: Article (blog posts only) -->
    {articleLD && <script type="application/ld+json" set:html={articleLD} />}

    <!-- Preconnect for external resources -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BFNWX56LLL"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-BFNWX56LLL');
    </script>

    <!-- Apply saved theme before first paint to avoid flash -->
    <script is:inline>
      (function () {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored ?? (prefersDark ? 'dark' : 'light');
        document.documentElement.setAttribute('data-theme', theme);
      })();
    </script>
  </head>
  <body>
    <Header />
    <main class="max-w-3xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
      <slot />
    </main>
    <Footer />
  </body>
</html>
